<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/chat_reciever"
    android:maxWidth="320dp"
    android:maxHeight="300dp"
    android:minWidth="70dp"
    android:minHeight="40dp">

    <!--        Background Image-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/backgroundImage"

        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_marginStart="22dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="2dp"

        android:src="@drawable/chats_background"

        android:visibility="gone"
        />

    <!--        Image With Message-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:id="@+id/messageImage"

        app:layout_constraintBottom_toTopOf="@id/reciverMessage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginStart="22dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="2dp"

        android:visibility="gone"/>

    <TextView
        android:id="@+id/reciverMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:inputType="textMultiLine|textImeMultiLine|textNoSuggestions"
        android:maxWidth="278dp"
        android:maxHeight="230dp"
        android:clickable="true"
        android:minWidth="30dp"
        android:minHeight="4dp"
        android:autoLink="web|phone"
        android:linksClickable="true"
        android:textColorLink="@color/com_facebook_blue"
        android:text="."
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/reciverTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/reciverTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="06:40 PM"
        android:textSize="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="27dp"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>